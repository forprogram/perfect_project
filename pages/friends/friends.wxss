/**exchange.wxss**/
@import "../../templates/component.wxss";

.bd-container {
  margin-top: 18rpx;
  width: 100%;
  background-color: #fff;
  border-bottom: 2rpx #dcdcdc solid;
}
.bd-title {
  height: 73rpx;
  line-height: 73rpx;
  color: #999;
  font-size: 24rpx;
  padding: 0 38rpx;
}
.walk-box {
  border-top: 2rpx #dcdcdc solid;
  padding: 0 38rpx;
  height: 120rpx;
  position: relative;
  color: #666;
}
.weekday {
  font-size: 30rpx;
  line-height: 120rpx;
  float: left;
}
.count {
  position: absolute;
  right: 314rpx;
  line-height: 120rpx;
}


.exchange-tip {
  background-image: url('http://or03790fw.bkt.clouddn.com/perfect/exchange_bg.png');
  position: relative;
  top: 129rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 613rpx;
  height: 820rpx;
}
.exchange-close {
  background-image: url('http://or03790fw.bkt.clouddn.com/perfect/btn_close1.png');
  position: absolute;
  right: 23rpx;
  width: 62rpx;
  height: 67rpx;
}
.exchange-box {
  color: #999;
  font-size: 28rpx;
  position: absolute;
  top: 547rpx;
  left: 50%;
  transform: translateX(-50%);
  line-height: 38rpx;
}
.exchange-step {
  font-size: 30rpx;
}
.exchange-point {
  font-size: 30rpx;
  color: #ff6f00;
}
.exchange-btn {
  background-image: url('http://or03790fw.bkt.clouddn.com/perfect/btn-certain.png');
  position: absolute;
  bottom: 53rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 442rpx;
  height: 93rpx;
}
/*
* 排行榜样式
**/
.count-box {
  width: 100%;
  height: 86rpx;
  background-color: #fff;
  padding: 27rpx 0;
}
.head-img {
  width: 85rpx;
  height: 85rpx;
  border-radius: 50%;
  float: left;
  margin-left: 84rpx;
}
.data-box {
  padding: 0 28rpx;
  float: left;
}
.name {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 50rpx;
}
.ranking {
  font-size: 24rpx;
  color: #999;
}
.walk-count-green {
  float: right;
  margin-right: 35rpx;
  color: #42bd56;
  font-size: 30rpx;
  line-height: 86rpx;
}
.walk-count {
  font-size: 50rpx;
}
.walk-count-orange {
  float: right;
  margin-right: 35rpx;
  color: #ff5800;
  font-size: 30rpx;
  line-height: 86rpx;
}
.ranking-container {
  margin-top: 105rpx;
  position: relative;
  border-top: 2rpx #dcdcdc solid;
}
.ranking-num {
  font-size: 36rpx;
  line-height: 86rpx;
  position: absolute;
  left: 35rpx;
}
.fri-name {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 86rpx;
}